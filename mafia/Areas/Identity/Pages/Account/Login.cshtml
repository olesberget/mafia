@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<br/>
<br/>
<div class="login-register">
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-5">
    <section>
        <form id="account" method="post">
            <h2>Use a local account to log in.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password" class="form-label">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="checkbox mb-3">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            <div>
                <button id="login-submit" type="submit" class="LoginButton">Log in</button>
            </div>
            <div>
                <p>
                    <a class="custom-link" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </p>
                <p>
                    <a asp-page="./Register" class="custom-link"  asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                </p>
                <p>
                <a class="custom-link" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
            </div>
        </form>
    </section>
    </div>



<div class="col-md-6">
        <section>
            <h3>Or log in with:</h3>
            <form asp-page-handler="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <button name="provider" value="Google" type="submit" class="btn btn-light">
                    <img src="~/pictures/googleicon.png" alt="Google" style="width: 50px; height: 50px;"/>
                </button>
                <button name="provider" value="Facebook" type="submit" class="btn btn-light">
                    <img src="~/pictures/facebooklogo.png" alt="Facebook" style="width: 50px; height: 50px;"/>
                </button>
                <!-- Add other providers as needed -->
            </form>

        </section>
    </div>
</div>
</div>
